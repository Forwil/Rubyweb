<h1>listing posts</h1>
<table>
	
	<% @posts.each do |post| %>
			<h3><%= post.title %></h3>
			<p><%= post.text %></p>
			<p><%= link_to 'Show', post_path(post) %>
			<%= link_to 'Edit', edit_post_path(post) %>
			<%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?'} %> 
			</p>
	<% end %>
</table>
<%= link_to 'New', new_post_path() %>
